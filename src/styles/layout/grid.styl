// Generate rows
row($gutter = 0, $color = null)
    if ($color is null)
        background-color: transparent
    else
        background-color: $color

    padding-left: $gutter;
    padding-right: $gutter;
    font-size: 0;


// Generate a container
container($maxwidth = null)
    margin-left: auto;
    margin-right: auto;
    max-width: $maxwidth;
    font-size: 0;

generate-columns(breakpoint, columns)
    for c in 1..columns
        .col-{breakpoint}-{c}
            display: inline-block;
            width: percentage((c / columns));
            vertical-align: top;
            font-size: 12px;


.container
    container($grid-maxwidth);

    &--main
        container($grid-maxwidth);

.row
    row($grid-padding);


// small
generate-columns('s', $grid-columns)

// mediumAndUp
+above('m')
    generate-columns('m', $grid-columns)

// largeAndUp
+above('l')
    generate-columns('l', $grid-columns)

// xlargeAndUp
+above('xl')
    generate-columns('xl', $grid-columns)
